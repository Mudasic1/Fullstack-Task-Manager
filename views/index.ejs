<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">

  <!-- Form Section -->
  <div class="w-full min-h-screen p-10">
    <h1 class="text-4xl font-bold mb-5 text-blue-400">Task Manager</h1>
    <form action="/create" method="post" class="mb-10">
      <input type="text" name="title" placeholder="Title goes here"
        class="w-full p-3 mb-3 bg-zinc-800 rounded-md outline-blue-500 text-lg text-white" required>
      <textarea name="details" placeholder="Description goes here"
        class="w-full p-3 bg-zinc-800 rounded-md outline-blue-500 text-sm text-white resize-none" rows="4" required></textarea>
      <button type="submit" class="mt-3 bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Create Task</button>
    </form>

    <!-- Tasks Section -->
    <div class="tasks grid gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      <% if (tasks.length > 0) { %>
        <% tasks.forEach(function(task) { %>
          <div class="bg-zinc-800 p-4 rounded-md">
            <h2 class="text-2xl font-bold text-blue-300"><%= task.name %></h2>
            <p class="mt-2 text-gray-400"><%= task.details %></p>
            
            <!-- Delete Button -->
            <form action="/delete/<%= task.name %>" method="post" class="mt-3">
              <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600">Delete</button>
            </form>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-gray-500">No tasks available. Create your first task!</p>
      <% } %>
    </div>
  </div>

</body>
</html>
